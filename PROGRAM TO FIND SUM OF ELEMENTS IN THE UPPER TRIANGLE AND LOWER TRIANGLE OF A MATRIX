//PROGRAM TO FIND SUM OF ELEMENTS IN THE UPPER TRIANGLE AND LOWER TRIANGLE OF A MATRIX:
    #include<stdio.h>
    int main(){
        int n,m,i,j,sum1=0,sum2=0;
        printf("Enter the number of rows:\n");
        scanf("%d",&n);
        printf("Enter the number of columns:\n");
        scanf("%d",&m);
        int arr[n][m];
        printf("\nEnter the matrix:\n");
        for(i=0;i<n;i++){
            for(j=0;j<m;j++){
                scanf("%d",&arr[i][j]);
            }
        }
        printf("\nThe matrix you entered is:\n");
        for(i=0;i<n;i++){
            for(j=0;j<m;j++){
                printf("%d\t",arr[i][j]);
            }
            printf("\n");
        }
        printf("\nThe sum of upper traingle elements is\n");
        for(i=0;i<n;i++){
            for(j=0;j<m;j++){
                if(i<j){
                    sum1=arr[i][j]+sum1;
                }
            }
        }
        printf("%d",sum1);

        printf("\nThe sum of lower traingle elements is\n");
        for(i=0;i<n;i++){
            for(j=0;j<m;j++){
                if(i>j){
                    sum2=arr[i][j]+sum2;
                }
            }
        }
        printf("%d",sum2);

        return 0;
    }
